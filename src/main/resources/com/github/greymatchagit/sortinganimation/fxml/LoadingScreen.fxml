<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.greymatchagit.sortinganimation.controllers.LoadingScreenController">
   <center>
      <AnchorPane fx:id="anchorpaneParent" BorderPane.alignment="CENTER">
         <children>
            <Circle fx:id="circleSmall" fill="#fef3c7" layoutX="30.0" layoutY="30.0" radius="30.0" stroke="#f59e0b" strokeType="INSIDE" strokeWidth="4.0" />
            <Circle fx:id="circleMedium" fill="#dbeafe" layoutX="50.0" layoutY="50.0" radius="50.0" stroke="#3b82f6" strokeType="INSIDE" strokeWidth="4.0" />
            <Circle fx:id="circleLarge" fill="#dcfce7" layoutX="70.0" layoutY="70.0" radius="70.0" stroke="#22c55e" strokeType="INSIDE" strokeWidth="4.0" />
            <VBox fx:id="vboxParent" alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sorting Visualizer">
                     <font>
                        <Font size="52.0" />
                     </font>
                  </Text>
                  <StackPane maxHeight="70.0" maxWidth="500.0" minHeight="70.0" minWidth="500.0" prefHeight="70.0" prefWidth="500.0" VBox.vgrow="NEVER">
                     <children>
                        <StackPane fx:id="stackpaneActionMessage">
                           <children>
                              <Text fx:id="txtActionMessage" strokeType="OUTSIDE" strokeWidth="0.0" text="Click anywhere to start">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Text>
                           </children>
                        </StackPane>
                     </children>
                  </StackPane>
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
